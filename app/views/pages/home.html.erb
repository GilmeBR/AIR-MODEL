<section class="hero">
  <div class="hero-content">
    <h1>Find Your Dream Flat</h1>
    <p>Find the perfect place to stay for your next trip</p>
  </div>
</section>
<div>
<ul class="d-inline">
<% Flat::CATEGORIES.each do |category| %>
<li><%= link_to category.capitalize, root_path(filter: category) %></li>
<% end %>
</ul>
</div>
<h1 class="text-center mb-4">Flats Available for Rent</h1>
<div class="container">
  <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
      <% if flat.fotos.attached? %>
        <img class="card-img-top" src="<%= cl_image_path flat.fotos.first.key %>" alt="Card image cap">
      <% else %>
        <img class="card-img-top" src="https://picsum.photos/id/1015/300/200" alt="Card image cap">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= (flat.title) %></h5>
        <div class="card-info">
          <p class="card-city-country"><%= flat.city %></p>
          <p class="card-text">Endereço: <%= flat.address %></h5>
          <p class="card-text">Category: <%= flat.category %></h5>        <%# <p class="card-description"><strong>Descrição:</strong> <%= @flat.description %>
          <p class="card-price"><%= number_to_currency(flat.price) %></p>
          <div class="card-rating">
            <i class="fa fa-star">4,89</i>
          </div>
          <%= link_to "View Details", flat_path(flat) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

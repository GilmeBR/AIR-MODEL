
<% @flats.each do |flat| %>
  <div class="flat">
    <h2><%= link_to flat.title, flat %></h2>
    <p><strong>Pre√ßo:</strong> <%= number_to_currency(flat.price) %></p>
    <p><%= link_to "Ver mais", flat %></p>
  </div>
<% end %>
<h1 class="text-center mb-4">Flats Available for Rent</h1>
<div class="d-flex justify-content-around">
  <div class="row">
    <div class="col-md-12 mb-4">
      <% @flats.each do |flat| %>
       <%= link_to flat_path(flat) do %>
      <div class="card">
      <% if flat.fotos.attached? %>
       <img class="card-img-top" src="<%= cl_image_path flat.fotos.first.key %>" alt="Card image cap">
       <% else %>
      <img class="card-img-top" src="https://picsum.photos/id/1015/300/200" alt="Card image cap">
      <% end %>
        <div class="card-body">
          <h5 class="card-title">Flat 1</h5>
          <div class="card-info">
            <p class="card-city-country">City, Country</p>
            <p class="card-description">One line of description</p>
            <p class="card-price">$ <%= flat.price %>/night</p>
            <div class="card-rating">
              <i class="fa fa-star">4,89</i>
            </div>
          </div>
          <% form_for flat do |f| %>
          <div class="form-inputs">
          <%= f.label :nome %>
      <%= f.text_field :nome %>
    </div>
    <%= link_to "view", flats_path(flat) %>
    <%= link_to "Novo flat", new_flat_path if policy(flat).new? %>
   <% end %>

        </div>
      </div>
    <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h1><%= @flat.title %></h1>
  <div class="row d-flex justify-content-start">
    <div class="col-md-1">
      <div class="card-rating">
        <i class="fa fa-star">4,89</i>
      </div>
    </div>
    <div class="col-md-2">
      <p><%= @flat.comments.size %> Comentários</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @flat.photos.each_with_index do |foto, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <%= cl_image_tag foto.key, width: 600, height: 400, crop: :fill %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center"><%= @flat.title %></h5>
          <h5 class="card-city-country"><strong>Cidade: </strong><%= @flat.city %></h5>
          <p class="card-text"><strong>Endereço: </strong> <%= @flat.address %></h5>
          <p class="card-text"><strong>Category: </strong><%= @flat.category %></h5>
          <h5 class="card-title d-flex justify-content-end"><strong>Preço: </strong> <%= number_to_currency(@flat.price) %></h5>
          <p><%= button_to "Reservar", new_flat_booking_path(@flat), id: "show-reservar-button" %></p>
          <div class="d-flex justify-content-between">
            <p><%= link_to "Editar", edit_flat_path(@flat) %></p>
            <p><%= button_to "Excluir", flat_path(@flat), method: :delete, data: { confirm: "Tem certeza que deseja excluir este Flat?" } %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Voltar para a lista de Flats", root_path%>

  <div class="row d-flex justify-content-between">
    <p class="card-description"><strong>Descrição:</strong> <%= @flat.description %>
    <div class="col-sm-4">
      <h2>Comentários:</h2>
      <% @flat.comments.each do |comment| %>
        <p><%= comment.content %></p>
      <% end %>
    </div>
    <div class="col-sm-4">
      <h2>Adicionar comentário:</h2>
      <%= simple_form_for([@flat, @comment]) do |f| %>
        <div class="form-inputs">
          <%= f.input :content, placeholder: "Deixe seu comentario aqui", label: false %>
          <%= f.submit "Criar Comentário"%>
        </div>
      <% end %>
    </div>
  </div>
      <div style="width: 100%; height: 600px;"
      data-controller="show"
      data-show-markers-value="<%= @marker.to_json %>"
      data-show-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

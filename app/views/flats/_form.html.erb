<div class="container">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :city %>
      <%= f.input :address %>
      <%= f.input :category, collection: Flat::CATEGORIES.map { |category| category.capitalize } %>
      <%= f.input :price %>
      <%= f.file_field :photos, multiple: true %>
    </div>

    <div class="actions btn btn-light border border-black rounded border-top-5">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
